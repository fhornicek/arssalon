---
import PrimaryBtn from '../components/PrimaryBtn.astro';
import { Image } from 'astro:assets';
import reservationImage from '../assets/reservation-salon.jpg'; // Přidejte obrázek

export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
  imageSrc?: ImageMetadata;
  imageAlt?: string;
}

const { 
  title = "REZERVUJTE SE",
  description = "OBJEDNEJTE SE JEDNODUŠE ONLINE NEBO MI NAPIŠTE – OZVU SE CO NEJDŘÍVE.",
  buttonText = "REZERVOVAT TERMÍN",
  buttonHref = "/rezervace",
  imageSrc = reservationImage,
  imageAlt = "Rezervace v ARS Salon"
} = Astro.props;
---

<section class="relative min-h-[50vh] h-[50vh] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 -z-10">
    <Image 
      src={imageSrc}
      alt={imageAlt}
      class="w-full h-full object-cover"
      width={1920}
      height={1080}
      quality={90}
    />
    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black/60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="space-y-8">
      
      <!-- Main Title -->
      <h2 class="text-5xl sm:text-6xl lg:text-7xl font-light tracking-wide leading-tight">
        {title}
      </h2>

      <!-- Description -->
      <p class="text-base sm:text-lg lg:text-xl leading-relaxed opacity-95 font-light mx-auto sm:whitespace-nowrap">
        {description}
      </p>

      <!-- CTA Button -->
      <div class="pt-6 flex justify-center">
        <PrimaryBtn 
          text={buttonText}
          href={buttonHref}
          size="lg"
        />
      </div>

    </div>
  </div>
</section>